<div class="row">
  <div class="col-auto">
    <h2>Welcome {{username}}!</h2>
  </div>
</div>

<div class="row">
  <div class="col">
    <h3>Create a New Blog:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="blog-name">Blog Name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="blog-funding" name="blog-funding" />
      </div>
      <div class="form-group">
        <label for="blog-desc">What's On Your Mind?</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button id="create-btn" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
<div class="project-list-parent">
  {{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>
    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{blog.dataValues.id}}">{{blog.dataValues.blog_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.dataValues.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  </div>
</div>
