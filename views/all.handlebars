<div class="blog-container">
  <div class="card-header col-md-10">
    <h2>
      Everyday Mountain Biking Blog
    </h2>
  </div>
  {{#each blogs as |blog|}}
    <div class="blog col-md-5">
      <p>
        {{blog.id}}.
        {{blog.blog_name}}
      </p>
    </div>
    <div class="col-md-7">
      <p>
        New Post:
        {{blog.user_name}}
      </p>
    </div>
  {{/each}}
</div>
<!-- This is the form for adding a new blog -->
<div class="add-blog-container">
  <h2>
    Please add a new posting to the blog:
  </h2>
  <form class="new-blog-form">
    <label for="blog_name">
      Blog Name:
    </label>
    <br />
    <textarea id="blog_name" name="blog_name" rows="2" cols="30">
      {{blog_name}}
    </textarea>
    <br />
    <label for="description">
      Description:
    </label>
    <br />
    <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
    <br />
    <label for="user_name">
      User Name:
    </label>
    <br />
    <textarea id="user_name" name="user_name" rows="2" cols="30">
      {{user_name}}
    </textarea>
    <br />
    <br />
    <input type="checkbox" id="for_sale" name="for_sale" value="true" />
    <label for="for_sale">
      Check box if this is for sale
    </label>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>
<script src="/js/add-blog.js"></script>